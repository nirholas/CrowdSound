// main.styl

grey = #f6f6f6
purple = #7f00ff
darkpurple = darken(purple, 60%)
midpurple = darken(purple, 30%)

link-purple = #A347FF
black = #333
transblack = rgba(0,0,0,0.6)
transblacker = rgba(0,0,0,1)
radius = 5px

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}

.nav, .pagination, .carousel, .panel-title a { cursor: pointer; }

transition()
  transition arguments
  -webkit-transition arguments
  -o-transition arguments
  -moz-transition arguments

*
  padding 0
  margin 0
  font-weight 100
  // color black

html
  height 100%

a
  text-decoration none
  color white
  cursor pointer
  &.black-link
    color black
  &:hover
    color link-purple

body
  font-size 20px
  // padding-top 50px
  background-color f0efef
  color white
  font-family "Raleway", helvetica
  position relative
  min-height 100%

